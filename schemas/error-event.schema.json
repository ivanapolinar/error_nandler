{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ErrorEvent",
  "type": "object",
  "properties": {
    "service": {
      "type": "string"
    },
    "component": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": [
        "CLIENT_ERROR",
        "BUSINESS_ERROR",
        "INFRASTRUCTURE_ERROR",
        "SECURITY_ERROR",
        "UNEXPECTED_ERROR"
      ]
    },
    "code": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "severity": {
      "type": "string",
      "enum": [
        "LOW",
        "MEDIUM",
        "HIGH",
        "CRITICAL"
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "correlationId": {
      "type": "string"
    },
    "extra": {
      "type": "object"
    }
  },
  "required": [
    "service",
    "category",
    "code",
    "message",
    "timestamp"
  ],
  "additionalProperties": false
}